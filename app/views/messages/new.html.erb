<% provide(:title, 'Contact') %>

<div class="jonestitle"> <h1>Contact Us</h1> </div>
<div class="container">
<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 ">
    <%= form_for(@message) do |f| %>
      <%= render 'shared/message_error_messages' %>

      <%= f.label :name %>
		  <%= f.text_field :name, class: "form-control input-md" %>


      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control input-md" %>

		<div class="jonestopspacer">
      <%= f.label :body %>
  		<div class="field">
      	<%= f.text_area :body, placeholder: "Compose new comment...",  class:"form-control input-md"%>
 		 </div>
  	</div>
		<div class="jonestopspacer">
      <%= f.submit "Submit Comment", class: "btn btn-lg btn-primary" %>
    <% end %>
  	</div>
  </div>
</div>
</div>


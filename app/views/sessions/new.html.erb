<% provide(:title, "Sign in") %>
<div class="jonestitle"> <h1>Sign in</h1> </div>
<div class="container">
<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 ">
    <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email, class:"form-control input-md" %>


     <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input-md" %>
   

      <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
    <% end %>

		<div class="jonestopspacer">
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <p>Forgot Password? <%= link_to "Send it to me!", new_password_reset_path %></p>
    </div>
  </div>
</div>
</div>

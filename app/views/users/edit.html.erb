<% provide(:title, "Edit user") %>
<div class="jonestitle"> <h1>Update Your Profile</h1> </div>
<div class="container">

<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control input-md" %>


      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control input-md" %>


      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input-md" %>


      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: "form-control input-md" %>


      <%= f.submit "Save changes", class: "btn btn-lg btn-primary" %>
    <% end %>

		<div class="jonestopspacer">
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
    </div>
  </div>
</div>

</div>

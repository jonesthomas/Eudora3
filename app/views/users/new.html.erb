
<% provide(:title, 'Sign up') %>
<div class="jonestitle"> <h1>Sign up</h1> </div>
<div class="container">


<div class="row">
	<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 ">

    <%= form_for(@user) do |f| %>

			<%= render 'shared/error_messages' %>

      <%= f.label :name %>
		  <%= f.text_field :name, class: "form-control input-md" %>


      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control input-md" %>


      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input-md" %>


      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control input-md" %>



      <%= f.submit "Create my account", class: "btn btn-lg btn-primary" %>

    <% end %>
	</div>
</div>
</div>
